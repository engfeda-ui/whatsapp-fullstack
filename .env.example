# ========================================
# WhatsApp Business Platform - Environment Configuration
# ========================================
# Copy this file to .env and customize the values
# IMPORTANT: Change all secrets before deploying to production!

# ========================================
# Port Configuration
# ========================================
# Frontend (host port -> container port 80)
FRONTEND_PORT=80

# Backend (host port -> container port 8080)
BACKEND_PORT=5000

# ========================================
# Backend Configuration
# ========================================
ASPNETCORE_ENVIRONMENT=Production

# Database (SQLite by default)
BACKEND_CONNECTION_STRING=Data Source=/data/whatsapp.db

# JWT Configuration
# WARNING: Change these secrets in production!
JWT_SECRET=CHANGE-THIS-TO-A-STRONG-RANDOM-32-CHARACTER-KEY
JWT_ISSUER=WhatsAppBackend
JWT_AUDIENCE=WhatsAppFrontend
JWT_EXPIRATION_HOURS=1
JWT_REFRESH_DAYS=7

# CORS Configuration
FRONTEND_ORIGIN=http://localhost

# ========================================
# Frontend Configuration
# ========================================
BACKEND_URL=http://localhost:5000

# ========================================
# Optional: Azure OpenAI Configuration
# ========================================
# Uncomment and configure if using AI features
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
# AZURE_OPENAI_API_KEY=your-api-key
# AZURE_OPENAI_DEPLOYMENT=gpt-4
